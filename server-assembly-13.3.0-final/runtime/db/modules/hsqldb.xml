<?xml version='1.0' encoding='UTF-8'?>
<dbModule name="hsqldb" driver="org.hsqldb.jdbcDriver" urlTemplate="jdbc:hsqldb:&lt;file|mem&gt;:&lt;dbname&gt;">
	<jars>
		<jar file="../libs/hsqldb.jar"/>
	</jars>
	<!-- identifier size not limited, so limit it internally -->
	<params maxColumnNameLength="128" maxTableNameLength="128" />
	<templates templateDelimiter="&lt;&gt;" sqlCommandDelimiter=";">
		<createScript>CREATE TABLE &lt;tableName&gt; (&lt;columns:{attr | &lt;attr.name&gt; &lt;attr.type&gt;}; separator=&quot;,&quot;&gt;);</createScript>
		<createColumn>attr | ALTER TABLE &lt;tableName&gt; ADD &lt;attr.name&gt; &lt;attr.type&gt;;</createColumn>
		<updateColumn>attr | ALTER TABLE &lt;tableName&gt; ALTER COLUMN &lt;attr.name&gt; &lt;attr.type&gt;;</updateColumn>
		<deleteColumn>attr | ALTER TABLE &lt;tableName&gt; DROP COLUMN &lt;attr.name&gt;;</deleteColumn>
		
		<pagedSelectScript>
		SELECT &lt;selNames:{it | &lt;it&gt;};separator=","&gt; FROM &lt;tableName&gt; &lt;if(columns)&gt; WHERE &lt;columns:{it | &lt;it&gt;=?};separator=" AND "&gt;&lt;endif&gt; 
		&lt;if(groups)&gt; GROUP BY &lt;groups:{it | &lt;it&gt;};separator=","&gt;&lt;endif&gt; 
		&lt;if(sorters)&gt; ORDER BY &lt;sorters:{it | &lt;it&gt;};separator=","&gt;&lt;endif&gt;
		LIMIT &lt;count&gt; OFFSET &lt;offset&gt;
		</pagedSelectScript>		
		
		<!-- indexes -->
		<createIndex>CREATE INDEX &lt;indexName&gt; ON &lt;tableName&gt; (&lt;columns;separator=&quot;,&quot;&gt;)</createIndex>
		<dropIndex>DROP INDEX &lt;indexName&gt;</dropIndex>		
		
		<sequenceCreate>CREATE SEQUENCE &lt;seqName&gt;</sequenceCreate>
		<sequenceNext>CALL NEXT VALUE FOR &lt;seqName&gt;</sequenceNext>
		<sequenceDrop>DROP SEQUENCE &lt;seqName&gt;</sequenceDrop>
		<sequenceSet></sequenceSet>
	</templates>
	
	<nonParametricDbTypes>
		TIME,DOUBLE,TIMESTAMP,DOUBLE PRECISION,REAL,FLOAT,INT,TINYINT,SMALLINT
	</nonParametricDbTypes>
	
	<persistenceMappings>
		<mapping type="STRING" dbType="VARCHAR($size)" defaultSize="255"/>
		<mapping type="BOOLEAN" dbType="BIT" />
		<mapping type="INTEGER" dbType="INTEGER" />
		<mapping type="LONG_INTEGER" dbType="BIGINT" />
		<mapping type="BIG_INTEGER" dbType="BIGINT" />
		<mapping type="FLOAT" dbType="DOUBLE" />
		<mapping type="DATETIME" dbType="DATETIME" />
    	<mapping type="BLOB" dbType="BLOB"/>
		<mapping type="CLOB" dbType="CLOB"/>		
	</persistenceMappings>
	
	<genericMappings>
		<!-- strings -->
		<mapping sourceType="CHAR(%s)" targetType="VARCHAR($1)" />
		<mapping sourceType="CHAR" targetType="VARCHAR(255)" />
		<mapping sourceType="CHARACTER(%s)" targetType="VARCHAR($1)" />
		<mapping sourceType="CHARACTER" targetType="VARCHAR($1)" />
		<mapping sourceType="LONGVARCHAR(%s)" targetType="LONGVARCHAR($1)" />
		<mapping sourceType="LONGVARCHAR" targetType="LONGVARCHAR($1)" />
		<mapping sourceType="VARCHAR_IGNORECASE(%s)" targetType="VARCHAR($1)" />
		<mapping sourceType="VARCHAR_IGNORECASE" targetType="VARCHAR($1)" />
		<mapping sourceType="VARCHAR" targetType="VARCHAR(255)" />
		<!-- datetime -->
		<mapping sourceType="TIME" targetType="DATETIME" />
		<mapping sourceType="TIMESTAMP" targetType="DATETIME" />
		<!-- numeric types -->
		<mapping sourceType="DOUBLE PRECISION" targetType="DOUBLE" />
		<mapping sourceType="REAL" targetType="DOUBLE" />
		<mapping sourceType="FLOAT" targetType="DOUBLE" />
		<mapping sourceType="INT" targetType="INTEGER" />
		<mapping sourceType="TINYINT" targetType="INTEGER" />
		<mapping sourceType="SMALLINT" targetType="INTEGER" />
		<!-- generic numberic types -->
		<mapping sourceType="NUMERIC" targetType="NUMERIC(10,2)" />
		<mapping sourceType="NUMERIC(%s)" targetType="NUMERIC($1,0)" />
		<mapping sourceType="DECIMAL" targetType="NUMERIC(10,2)" />
		<mapping sourceType="DECIMAL(%s)" targetType="NUMERIC($1,0)" />
		<mapping sourceType="DECIMAL(%s,%d)" targetType="NUMERIC($1,$2)" />
	</genericMappings>
	
	<dqcMappings>
	    <mapping sourceType="NUMERIC(%s,%p)" targetType="FLOAT">
    		<cases>
    			<case maxSize="10" maxPrecision="0" targetType="INTEGER" />
    			<case maxPrecision="0" targetType="LONG" />
    		</cases>
    	</mapping>
    	<mapping sourceType="VARCHAR(%s)" targetType="STRING" />
    	<mapping sourceType="DATETIME" targetType="DATETIME" />
    	<mapping sourceType="DOUBLE" targetType="FLOAT" />
    	<mapping sourceType="INTEGER" targetType="INTEGER" />
    	<mapping sourceType="BIT" targetType="BOOLEAN"/>
    	<mapping sourceType="BIGINT" targetType="LONG"/>
    </dqcMappings>  
	
</dbModule>